<div id="front_page_modal">

  <!-- Button trigger modal -->
  <ul class="modal-button-list">
    <li id="site_name">
      <%= link_to 'Couchfoodie', root_url %> <span class="beta">BETA</span>
    </li>
    <li>
      <button data-my-modal="#user_modal" data-toggle="modal" class="button_small">
        Log in
      </button>
    </li>
    <li>
      <button data-my-modal="#sign_up_modal" data-toggle="modal" class="button_small">
        Sign Up
      </button>
    </li>
  </ul>

   <!-- modal content -->

  <div class="my-modal" id="sign_up_modal">
    <div class="modal-container">
      <div class="my-modal-background">
      </div>
      <div class="my-modal-content">
        <a class="fb_button" href="<%= facebook_login_path %>">
          <i class="fa fa-facebook fa-2x">
            <span class="text_container">Sign up with Facebook</span>
          </i>
        </a>
      </div>
    </div>
  </div>

  <div class="my-modal" id="user_modal">
    <div class="modal-container">
      <div class="my-modal-background">
      </div>
      <div class="my-modal-content">
        <a class="fb_button" href="<%= facebook_login_path %>">
          <i class="fa fa-facebook fa-2x">
            <span class="text_container">Log in with Facebook</span>
          </i>
        </a>
      </div>
    </div>
  </div>
</div>
