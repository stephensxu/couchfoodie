<header class="header">
<h1 class="header"><%= render partial: "shared/header_logged_in" %></h1>
</header>

<div class="main_body">
  <div class="notice">
    <% if flash[:notice] %>
      <strong><%= flash[:notice] %></strong>
    <% end %>
  </div>

  <% @kitchens.each do |kitchen| %>
    <% next if kitchen.data_status != "active" %>
  <hr>
  <div class="kitchen_list">
    <h3><%= kitchen.name %></h3><br>
    <strong>Kitchen owner: </strong> <%= kitchen.user.nickname %><br>
    <strong>Description: </strong><%= kitchen.description %><br>
    <strong>Location: </strong> <%= kitchen.city %>, <%= kitchen.state %>, <%= kitchen.zipcode %><br><br>
    <%= render partial: "reservations/new_reservation_form", :locals => { :reservation => @reservation, :kitchen => kitchen } %>
  </div>
  <hr>
  <% end %>

</div>

<div class="footer">
  <%= render partial: "shared/footer" %>
</div>
