<div class="reservations_list">
  <div class="notice">
    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>
  </div>

  <% if @reservations.empty? %>
    There is nothing here.
  <% end %>
  
  <ul>
  <% @reservations.each do |reservation| %>
    <div class="individule_reservation"> 
      <li>
      <hr>
        <strong>Status: </strong> <%= reservation.status %><br>
        <strong>Reservation for: </strong> <%= reservation.kitchen.name %><br>
        <strong>Host's nickname: </strong> <%= reservation.kitchen.user.nickname %><br>
        <strong>Host's email: </strong> <%= reservation.kitchen.user.email %><br>
        <strong>Number of people: </strong> <%= reservation.guest_number %><br>
        <strong>Reserve on: </strong> <%= reservation.reserve_date %>, <%= show_reservation_time(reservation) %><br>
        <strong>Location: </strong> <%= reservation.kitchen.street_address %>, <%= reservation.kitchen.city %>, <%= reservation.kitchen.state %>, 
        <%= reservation.kitchen.zipcode %><br>
        <strong>Message to host: </strong> <%= reservation.message %><br>
        <strong>Message from host: </strong> <%= reservation.message %><br>
      <hr>
      </li>
    </div>
  <% end %>
  </ul>
</div>
