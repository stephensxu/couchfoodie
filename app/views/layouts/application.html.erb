  </head>

  <body>
    <div class="wrapper">
      <div class="header">
        <header><%= render partial: "shared/header_all" %></header>
      </div>

      <%= yield %>

      <div class="push"></div>
    </div>

    <div class="footer">
      <%= render partial: "shared/footer" %>
    </div>
  </body>
</html>
