<%= form_for reservation do |f| %>
  <% if reservation.errors.any? %>
    <div id="error_explanation">
      <h2><% pluralize(reservation.errors.count, "error") %>Please check your input for the following guideline</h2>

      <ul>
      <% reservation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Send a warm welcome message" %><br>
    <%= f.text_area :message_from_host, :class => "text_box" %>
  </div>

  <div class="field">
    <%= f.hidden_field :status, :value => "approved" %>
  </div>

  <div class="actions">
    <%= f.submit "Approve", :class => "button_normal" %>
  </div>
<% end %>
