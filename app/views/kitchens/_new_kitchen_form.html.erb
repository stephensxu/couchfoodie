<% states = %w(AL AK AZ AR CA CO CT DE FL GA HI ID IL IN IA KS KY LA ME MD MA MI MN MS MO
               MT NE NV NH NJ NM NY NC ND OH OK OR PA RI SC SD TN TX UT VT VA WA WV MI WY
               AS DC FM GU MH MP PW PR VI AE AA AP).sort %>
               
<!-- This list contains abbreviation for 50 States in US + 9 commonwealth/territory + 3 Military State -->


<%= form_for kitchen do |f| %>

  <% if kitchen.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(kitchen.errors.count, "error") %>. Oops, please check your input and try again!</h2>

      <ul>
        <% kitchen.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table class="create_kitchen_table", cellspaceing="30">
    <tr>
      <td align="left"><span class="login_table_content">Name</span></td> 
      <td><%= f.text_field :name, :class => "input_box" %></td>
    </tr>
    <tr>
      <td align="left"><span class="login_table_content">Description</span></td> 
      <td><%= f.text_area :description, :class => "text_box" %></td>
    </tr>
    <tr>
      <td align="left"><span class="login_table_content">Street address</span></td>
      <td><%= f.text_field :street_address, :class => "input_box" %></td>
    </tr>
    <tr>
      <td align="left"><span class="login_table_content">City</span></td> 
      <td><%= f.text_field :city, :class => "input_box" %></td>
    </tr>
    <tr>
      <td align="left"><span class="login_table_content">State</span></td> 
      <td><%= f.select :state, options_for_select(states), :class => "input_box" %></td>
    </tr>
    <tr>
      <td align="left"><span class="login_table_content">Zipcode</span></td> 
      <td><%= f.text_field :zipcode, :class => "input_box" %></td>
    </tr>
  </table><br>
      <%= f.submit "Submit", :class => "button" %>
<% end %>
