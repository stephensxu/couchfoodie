<div class="reservations_list">
  <div class="notice">
    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>
  </div>

  <% if @reservations.empty? %>
    There is nothing here.
  <% end %>
 
  <ul>
  <% @reservations.each do |reservation| %>
    <li>
    <hr>
      <strong>Status: </strong> <%= reservation.status %><br>
      <strong>Reservation for: </strong> <%= reservation.kitchen.name %><br>
      <strong>Number of people: </strong> <%= reservation.guest_number %><br>
      <strong>Reserve on: </strong> <%= reservation.reserve_date %>, <%= show_reservation_time(reservation) %><br>
      <strong>Location: </strong> <%= reservation.kitchen.city %>, <%= reservation.kitchen.state %>, 
      							  <%= reservation.kitchen.zipcode %><br>
      <strong>Message to owner: </strong> <%= reservation.message %><br>
      <%= button_to("Approve", reservation_path(reservation), :method => :patch,
      :params => { "reservation[status]" => "approved" }, :class => "post_button")%>
      <%= button_to("Deny",    reservation_path(reservation), :method => :patch,
      :params => { "reservation[status]" => "denied" }, :class => "post_button")%>
    <hr>
    </li>
  <% end %>
  </ul>
</div>
