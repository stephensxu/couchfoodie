<ul class="kitchen_index_list clearfix">
  <% kitchens.each do |kitchen| %>
    <li class="kitchen_container clearfix">
      <div class="thumbnail_container">
        <%= link_to image_tag(kitchen.show_front_page_photo_thumbnail), kitchen_path(kitchen), :class => "darken" %>
      </div>

      <div class="kitchen_info">
        <div class="kitchen_host_photo">
          <%= user_photo_tag(kitchen.user, :height => 100, :width => 100) %>
        </div>

        <ul class="kitchen_description">
          <li class="kitchen_name">
            <%= link_to kitchen.name, kitchen_path(kitchen) %>
          </li>
          <li class="kitchen_host">
            Host - <%= kitchen.user.first_name %>
          </li>
          <li class="kitchen_location">
            <%= render :partial => "kitchens/kitchen_address_no_street", :locals => { :kitchen => kitchen } %>
          </li>
        </ul>
      </div>
    </li>
  <% end %>
</ul>
